<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#96C291"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Pemrograman Mobile"
        android:textStyle="bold"
        android:textColor="#F4EEEE"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:paddingBottom="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/menu_back">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ujian Akhir Semester"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textColor="#F4EEEE"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:background="@drawable/title_back" />

        <LinearLayout
            android:id="@+id/project1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/project_back1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/project_back3"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:padding="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Project 1"
                android:textColor="#434343"
                android:textSize="20dp"
                android:gravity="center_horizontal" />
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="Instalasi Android Studio"
                android:textColor="#434343"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/project2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/project_back2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAlignment="center"
                android:background="@drawable/project_back3"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:text="Project 2"
                android:textColor="#434343"
                android:textSize="20dp"
                android:gravity="center_horizontal" />
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="Design User Interface"
                android:textColor="#434343"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/project3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/project_back1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/project_back3"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Project 3"
                android:textColor="#434343"
                android:textSize="20dp"
                android:gravity="center_horizontal" />
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="15dp"
                android:paddingTop="10dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="Practice Google Maps &amp; Direction API"
                android:textColor="#434343"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/project4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/project_back2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/project_back3"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Project 4"
                android:textColor="#434343"
                android:textSize="20dp"
                android:gravity="center_horizontal" />
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingBottom="15dp"
                android:paddingTop="10dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="Practice SQLite Database"
                android:textColor="#434343"/>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>